{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "webworker", "dom"], // for rollup-plugin-typescript2
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf" // for rollup-plugin-typescript2
  },
  // see also: https://github.com/ezolenko/rollup-plugin-typescript2/issues/211
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
